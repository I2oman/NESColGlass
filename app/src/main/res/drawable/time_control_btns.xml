<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <item>
        <layer-list>
            <item android:width="100dp" android:height="100dp">
                <shape android:shape="oval">
                    <gradient android:centerX="0.5" android:centerY="0.53" android:endColor="#00FFFFFF" android:gradientRadius="47dp" android:startColor="@color/light_blue" android:type="radial" />
                </shape>
            </item>

            <item android:width="100dp" android:height="100dp">
                <shape android:shape="oval">
                    <solid android:color="@color/white" />
                    <stroke android:width="14dp" android:color="#00FFFFFF" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
